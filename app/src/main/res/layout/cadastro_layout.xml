<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cvb"
    android:orientation="vertical"
    tools:context=".cadastro_acitivity">


    <ImageView
        android:id="@+id/imgLogin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/jkl" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center" />


    <EditText
        android:id="@+id/edtEmail2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:drawableEnd="@drawable/baseline_email"
        android:hint="Insira seu e-mail"
        android:inputType="textEmailAddress"
        android:maxLength="80"
        android:padding="10sp"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/edtEmail1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:drawableEnd="@drawable/baseline_email"
        android:hint="Insira seu e-mail"
        android:inputType="textEmailAddress"
        android:maxLength="80"
        android:padding="10sp"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/edtEmail2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:drawableEnd="@drawable/baseline_email"
        android:hint="Insira seu e-mail"
        android:inputType="textEmailAddress"
        android:maxLength="80"
        android:padding="10sp"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/edtEmail1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:drawableEnd="@drawable/baseline_email"
        android:hint="Insira seu e-mail"
        android:inputType="textEmailAddress"
        android:maxLength="80"
        android:padding="10sp"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:gravity="center"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/textinpreto1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Forget password?"
        android:textAlignment="center"
        android:textColor="#454141" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnSair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginStart="20dp"
            android:layout_weight="0"
            android:text="Sign up"
            android:textAllCaps="true" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:gravity="end"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textinpreto241541583"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="20sp"
                android:text="Forget password?"
                android:textAlignment="viewEnd"
                android:textColor="#454141" />

            <TextView
                android:id="@+id/textinpreto2396296"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="20sp"
                android:text="Sign in"
                android:textAlignment="textEnd"
                android:textColor="#454141"
                android:textStyle="bold"
                android:textSize="18dp"
                />
        </LinearLayout>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icons8_mac_os"
            />


    </LinearLayout>


</LinearLayout>